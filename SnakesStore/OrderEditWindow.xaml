<Window x:Class="SnakesStore.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesStore"
        mc:Ignorable="d"
        Title="Добавление Заказа" Height="450" Width="800">
    <Grid>
        <!-- Метка и текстовое поле для имени клиента -->
        <Label Content="Клиент:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="CustomerTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,30,0,0" IsReadOnly="True"/>

        <!-- Метка и текстовое поле для ввода общей суммы -->
        <Label Content="Общая сумма:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="TotalAmountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,90,0,0"/>

        <!-- Кнопки для сохранения и отмены -->
        <Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="SaveButton_Click"/>
        <Button Name="CancelButton" Content="Отменить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="CancelButton_Click"/>
    </Grid>
</Window>
