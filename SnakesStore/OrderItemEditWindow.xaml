<Window x:Class="SnakesStore.OrderItemEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesStore"
        mc:Ignorable="d"
        Title="Добавление Продукта" Height="450" Width="800">
    <Grid>
        <Label Content="Заказ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox Name="OrderComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,40,0,0" DisplayMemberPath="OrderId" SelectedValuePath="OrderId"/>

        <Label Content="Снэк" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <ComboBox Name="SnackComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,110,0,0" DisplayMemberPath="SnackName" SelectedValuePath="SnackId"/>

        <Label Content="Цена" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <TextBox Name="PriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,180,0,0"/>

        <Label Content="Количество" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0"/>
        <TextBox Name="QuantityTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,250,0,0"/>

        <Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="SaveButton_Click"/>
        <Button Name="CancelButton" Content="Отменить" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="CancelButton_Click"/>
    </Grid>
</Window>
