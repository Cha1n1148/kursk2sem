<Window x:Class="SnakesStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesStore"
        mc:Ignorable="d"
        Title="Авторизация" Height="296" Width="450">
    <Grid  Margin="0,0,10,0">
        <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,40,0,0"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,40,50,0" Width="200"/>

        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,80,50,0" Width="200"/>

        <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="0,0,0,30" Click="LoginButton_Click"/>
    </Grid>
</Window>
